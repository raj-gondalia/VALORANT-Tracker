<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@color/colorSurface"
    android:id="@+id/careerRowLinearLayout"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:weightSum="100"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="20"
            android:scaleType="fitXY"
            android:src="@drawable/phoenix"
            android:id="@+id/careerRowAgentImageView"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:weightSum="100"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Icebox"
                android:layout_weight="50"
                android:gravity="center"
                android:fontFamily="@font/poly_regular"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                android:id="@+id/careerRowMapTextView"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:text="2017/02/03"
                android:gravity="center"
                android:fontFamily="@font/poly_regular"
                android:textSize="12sp"
                android:id="@+id/careerRowDateTextView"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:text="03:35pm"
                android:gravity="center"
                android:fontFamily="@font/poly_regular"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:id="@+id/careerRowTimeTextView"/>



        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="35sp"
                android:gravity="center"
                android:text="15"
                android:fontFamily="@font/poly_italic"
                android:textColor="@color/colorWin"
                android:id="@+id/careerRowRoundsWonTextView"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:fontFamily="@font/poly_italic"
                android:text="-"
                android:textColor="#FFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="35sp"
                android:gravity="center"
                android:text="13"
                android:layout_weight="1"
                android:fontFamily="@font/poly_italic"
                android:textColor="@color/colorLoss"
                android:id="@+id/careerRowRoundsLostTextView"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:textSize="18sp"
                android:gravity="center"
                android:text="35/12/10"
                android:textColor="#FFF"
                android:fontFamily="@font/poly_regular"
                android:id="@+id/careerRowKdaTextView"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="right"
                android:src="@android:drawable/ic_menu_search"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>