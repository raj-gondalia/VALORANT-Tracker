<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="3dp"
    android:background="@drawable/layout_background"
    android:backgroundTint="@color/colorSurface"
    android:orientation="horizontal"
    android:id="@+id/leaderboardRowLinaerLayout"
    android:weightSum="100">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:textSize="30sp"
        android:fontFamily="@font/poly_italic"
        android:text="100th"
        android:textColor="@color/colorDraw"
        android:gravity="center"
        android:id="@+id/leaderboardRowRank"/>

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_weight="50">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:fontFamily="@font/poly_regular"
            android:textColor="@color/colorDraw"
            android:gravity="center"
            android:text="RKtheGREAT007"
            android:id="@+id/leaderboardRowGameName"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/poly_regular"
            android:layout_weight="1"
            android:gravity="center"
            android:text="8660"
            android:textColor="@color/colorDraw"
            android:id="@+id/leaderboardRowTagLine"/>

    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:textSize="25sp"
        android:text="736"
        android:fontFamily="@font/poly_regular"
        android:textColor="@color/colorDraw"
        android:gravity="center"
        android:id="@+id/leaderboardRowRankedRating"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:textSize="25sp"
            android:text="98"
            android:fontFamily="@font/poly_regular"
            android:gravity="center"
            android:textColor="@color/colorDraw"
            android:id="@+id/leaderboardRowWins"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="right"
            android:src="@android:drawable/ic_menu_search"/>

    </LinearLayout>


</LinearLayout>