<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="3dp"
    android:background="@drawable/layout_background"
    android:backgroundTint="@color/colorSurface"
    android:orientation="horizontal"
    android:weightSum="100">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:textSize="30sp"
        android:text="100th"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/leaderboardRowRank"/>

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_weight="50">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="RKtheGREAT007"
            android:id="@+id/leaderboardRowGameName"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="8660"
            android:textColor="@android:color/white"
            android:id="@+id/leaderboardRowTagLine"/>

    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:textSize="25sp"
        android:text="736"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:id="@+id/leaderboardRowRankedRating"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:textSize="25sp"
        android:text="98"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:id="@+id/leaderboardRowWins"/>
</LinearLayout>