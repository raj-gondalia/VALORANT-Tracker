<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="3dp"
    android:background="@color/colorDraw"
    android:weightSum="100"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="100"
        android:id="@+id/matchDialogLinearLayout"
        android:visibility="gone"
        android:background="@drawable/layout_background"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@drawable/layout_background"
            android:textSize="16sp"
            android:fontFamily="@font/poly_regular"
            android:textColor="@color/colorSurface"
            android:text="Agent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:background="@drawable/layout_background"
                android:fontFamily="@font/poly_regular"
                android:gravity="center"
                android:text="Game Name"
                android:textColor="@color/colorSurface"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/layout_background"
                android:fontFamily="@font/poly_regular"
                android:textSize="16sp"
                android:gravity="center"
                android:text="Tag Line"
                android:textColor="@color/colorSurface"/>


        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:text="Tier"
            android:fontFamily="@font/poly_regular"
            android:textSize="20sp"
            android:background="@drawable/layout_background"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/poly_regular"
            android:text="K/D/A"
            android:textColor="@color/colorSurface"/>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_weight="90"
        android:id="@+id/matchDialogRecyclerView"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:indeterminateTint="@color/colorSurface"
        android:id="@+id/matchDialogProgressBar"/>
</LinearLayout>