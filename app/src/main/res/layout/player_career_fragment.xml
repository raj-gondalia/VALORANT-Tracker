<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:layout_margin="3dp"
    android:background="@color/colorDraw"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="100"
        android:visibility="gone"
        android:id="@+id/playerCareerFragLinearLayout"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/poly_regular"
            android:background="@drawable/layout_background"
            android:textColor="@color/colorSurface"
            android:text="Agent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:weightSum="100"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Map"
                android:layout_weight="50"
                android:gravity="center"
                android:textSize="20sp"
                android:fontFamily="@font/poly_regular"
                android:background="@drawable/layout_background"
                android:textColor="@color/colorSurface"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:fontFamily="@font/poly_regular"
                android:text="Date and Time"
                android:background="@drawable/layout_background"
                android:textColor="@color/colorSurface"
                android:gravity="center"
                android:textSize="15sp"/>



        </LinearLayout>



        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:textColor="@color/colorSurface"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/poly_regular"
            android:text="Rounds"
            android:background="@drawable/layout_background"/>



        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/poly_regular"
            android:background="@drawable/layout_background"
            android:text="K/D/A"
            android:textColor="@color/colorSurface"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:visibility="gone"
        android:id="@+id/playerCareerFragRecyclerView"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:indeterminateTint="@color/colorSurface"
        android:layout_gravity="center"
        android:id="@+id/playerCareerFragProgressBar"/>
</LinearLayout>