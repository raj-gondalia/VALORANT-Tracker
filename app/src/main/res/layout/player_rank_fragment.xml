<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorSurface"
    android:weightSum="100"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/playerRankFragImageView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:fontFamily="@font/poly_regular"
        android:id="@+id/playerRankFragRankTextView"
        android:textSize="35sp"
        android:gravity="center"
        android:textColor="@color/colorDraw"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:progress="40"
            android:layout_weight="1"
            android:scaleY="3"
            android:progressTint="@color/colorDraw"
            android:gravity="center"
            android:id="@+id/playerRankFragSeekBar"
            android:thumb="@android:color/white"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poly_regular"
                android:textSize="15sp"
                android:gravity="left"
                android:id="@+id/playerRankFragRankRatingText"
                android:textColor="@color/colorDraw"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/playerRankFragRankingInTierTextView"
                android:textSize="15sp"
                android:fontFamily="@font/poly_regular"
                android:gravity="right"
                android:textColor="@color/colorDraw"/>

        </LinearLayout>



    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:fontFamily="@font/poly_italic"
        android:textSize="60sp"
        android:gravity="center"
        android:id="@+id/playerRankFragEloTextView"
        android:textColor="@color/colorDraw"/>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="@color/colorDraw"
        android:id="@+id/playerRankFragProgressBar"/>

</LinearLayout>