<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:id="@+id/matchDialogRowLinearLayout"
    android:background="@color/colorBlueTeam"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:weightSum="100"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="20"
            android:src="@drawable/phoenix"
            android:id="@+id/matchDialogRowAgentImageView"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:fontFamily="@font/poly_italic"
                android:gravity="bottom"
                android:id="@+id/matchDialogRowGameNameTextView"
                android:text="RKtheGREAT007"
                android:textColor="@color/colorDraw"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/poly_italic"
                android:textSize="16sp"
                android:gravity="top"
                android:text="#8660"
                android:id="@+id/matchDialogRowTagTextView"
                android:textColor="@color/colorDraw"/>


        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:id="@+id/matchDialogRowRankImageView"
            android:layout_gravity="center"
            android:src="@drawable/iron1"/>




        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:textSize="18sp"
            android:gravity="center"
            android:fontFamily="@font/poly_regular"
            android:text="35/12/10"
            android:textColor="@color/colorDraw"
            android:id="@+id/matchDialogRowKDATextView"/>

    </LinearLayout>


</LinearLayout>