<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="100"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_gravity="right"
        android:popupBackground="@color/colorDraw"
        android:id="@+id/homeFragSpinner"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:weightSum="100"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:hint="Username"
            android:layout_width="0dp"
            android:layout_weight="60"
            android:layout_margin="4dp"
            android:gravity="center"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/homeFragUserNameEditText"
                android:background="#FFFFFF"
                android:fontFamily="@font/poly_regular"
                android:backgroundTint="@color/colorDraw"
                android:scrollIndicators="top"
                android:inputType="text"
                android:maxLines="1"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:hint="Tag"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_weight="20"
            android:gravity="center"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/homeFragTagEditText"
                android:background="#FFFFFF"
                android:fontFamily="@font/poly_regular"
                android:backgroundTint="@color/colorDraw"
                android:scrollIndicators="top"
                android:inputType="text"
                android:maxLines="1"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_weight="20"
            android:fontFamily="@font/poly_regular"
            android:layout_margin="4dp"
            android:background="@drawable/button_background"
            android:id="@+id/homeFragGoButton"
            android:text="Go"/>
    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/homeFragProgressBar"/>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:layout_gravity="center"
        android:src="@drawable/valorant_logo"/>

</LinearLayout>